{
  "name": "lazy-turnip",
  "productName": "lazy-turnip",
  "version": "0.0.1",
  "description": "an application to handle installation of world of warcraft addons",
  "license": "MIT",
  "repository": "auo/lazy-turnip",
  "author": {
    "name": "Andreas Lindgren",
    "email": "",
    "url": ""
  },
  "scripts": {
    "test": "xo",
    "start": "electron .",
    "build": "electron-packager . --out=dist --app-version=%npm_package_version% --asar --overwrite --all --icon=images\\turnip.ico",
    "build-backup": "electron-packager . --out=dist --app-version=%npm_package_version% --prune --asar --overwrite --all",
    "build-windows": "electron-packager . --out=dist --app-version=%npm_package_version% --asar --overwrite --platform=win32 --arch=ia32 --icon=images\\turnip.ico",
    "build-installer-windows": "build --win --ia32"
  },
  "files": [
    "index.js",
    "index.html",
    "index.css",
    "renderer.js"
  ],
  "keywords": [
    "electron-app",
    "electron"
  ],
  "dependencies": {
    "electron-debug": "^1.0.0",
    "electron-json-storage": "^2.0.0",
    "electron-reload": "^1.0.2",
    "jquery": "^3.1.0",
    "jsonfile": "^2.3.1",
    "knockout": "^3.4.0",
    "node-wow-addon": "git+https://github.com/Auo/node-wow-addon.git"
  },
  "devDependencies": {
    "devtron": "^1.1.0",
    "electron": "^1.0.1",
    "electron-builder": "^6.4.0",
    "electron-packager": "^7.0.0",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  },
  "build": {
    "appId": "your.id",
    "app-category-type": "your.app.category.type"
  }
}
